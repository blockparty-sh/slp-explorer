<tr>
  <td>
    <div class="flex-vcenter">
      <a class="tokenid" href="/#token/<%= token.token[0].tokenDetails.tokenIdHex %>">
        <%= app.util.compress_tokenid(token.token[0].tokenDetails.tokenIdHex) %>
      </a>
      <button class="copybtn" data-clipboard-text="<%= token.token[0].tokenDetails.tokenIdHex %>"></button>
    </div>
  </td>
  <td>
    <div class="flex-vcenter">
      <span class="token-icon-small" data-tokenid="<%= token.token[0].tokenDetails.tokenIdHex %>" data-tokengroup="<%= token.token[0].nftParentId %>"></span>
      <%= token.token[0].tokenDetails.name %>
    </div>
  </td>
  <td><%= token.token[0].tokenDetails.symbol %></td>
  <td class="amount"><%= app.util.format_bignum_str(token.slpAmount, token.token[0].tokenDetails.decimals) %></td>
</tr>
